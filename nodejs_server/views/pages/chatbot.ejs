<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div id="audioData" class="jumbotron">
            <h1>Chatbot</h1>
        </div>

        <h2>Envio de Texto para Servidor</h2>

        <form id="textForm">
            <label for="textInput">Digite o texto:</label>
            <input type="text" id="textInput" name="textInput">
            <button type="submit">Enviar</button>
        </form>

        <script type="module">
            import { enviarTextoParaServidor } from '/js/send_text.js';
            document.getElementById('textForm').addEventListener('submit', function (event) {
                event.preventDefault(); // Evita que o formul√°rio seja submetido normalmente

                var texto = document.getElementById('textInput').value;
                enviarTextoParaServidor(texto);
            });
        </script>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>